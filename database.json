{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://yourdomain.com/schema-url",
    "title": "Attributes",
    "description": "Drop down menus of different database attributes",
    "type": "object",
    "properties": {
      "tables": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "columns": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "type": { "type": "string" },
                  "constraints": {
                    "type": "object",
                    "properties": {
                      "primary_key": { "type": "boolean" },
                      "unique": { "type": "boolean" },
                      "not_null": { "type": "boolean" },
                      "foreign_key": {
                        "type": "object",
                        "properties": {
                          "table": { "type": "string" },
                          "column": { "type": "string" }
                        },
                        "required": ["table", "column"]
                      },
                      "check": { "type": "string" }
                    }
                  }
                },
                "required": ["name", "type"]
              }
            }
          },
          "required": ["name", "columns"]
        }
      }
    },
    "required": ["tables"]
  }